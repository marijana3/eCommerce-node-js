<div class="container mt-4">
    <main role="main">
        <div class="row">
            <div class="col">
                <br><br>
                <h1>Insert new product</h1>
                <br>
                <a class="btn btn-dark" href="/product">Insert</a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <br><br>
                <h1>Products</h1>
                <div class="table-responsive-sm">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Type</th>
                                <th>Price</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each product}}
                            <tr>
                                <td><img style="width: 90px;" src="./img/{{this.type}}s/{{this.src}}"></td>
                                <td>{{this.type}}</td>
                                <td>{{this.price}}</td>
                                <td>
                                    <a class="btn btn-secondary" href="/product/{{this._id}}">Update</a>
                                    {{!-- <a class="btn btn-danger" href="/product/delete/{{this._id}}">Delete</a> --}}
                                </td>
                                <td>
                                    <form id="formDelete" method="GET" action="/product/delete/{{this._id}}"
                                        onsubmit="return checkDelete()">
                                        <button type="submit" class="btn btn-danger" style="background-color: brown">Delete</button>
                                        <input type="hidden" name="_method" value="DELETE" />
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>
<br><br><br>
<script>
    function checkDelete() {
      return confirm("Are you sure you want to delete this item?");
    }
</script>